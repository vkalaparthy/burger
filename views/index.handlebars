{{!-- Initally just display the burgers from the database --}}
<img src="assets/img/burger.png" alt="burger" class="center" height="220" width="260">
        
<h1>Burger Bonanza!</h1>

<div class="row">
    {{#each burgers}}
        {{#unless devoured}}
            <div class="col_left">
                <div>
                    {{id}}
                    {{burger_name}}
                    <button class="eat-burger" data-id="{{this.id}}">DEVOUR!</button>
                </div>
            </div>
        {{/unless}}
        {{#if devoured}}
            <div class="col_right">
                <div class="boxed">
                    {{id}}
                    {{burger_name}}
                </div>
            </div>
        {{/if}}
    {{/each}}
    
</div>


