<script type="text/javascript">
  $(".eat-burger").on("click", function(event) {
    const id = $(this).data("id");

    var newState = {
      devoured: true
    };

    // Send the PUT request.
    $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: newState
    }).then(
      function() {
        console.log("changed devoured to", newState);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

</script>
